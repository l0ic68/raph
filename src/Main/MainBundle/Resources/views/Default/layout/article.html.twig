{% extends "::layout/layout.html.twig" %}

{% block body %}

    <div class="push"></div>

    <section class=" col-xs-11 col-sm-11 col-md-11 col-lg-11 ">
        <img src="{{ asset(''~article.source)}}" class="imgArticle col-xs-5 col-sm-5 col-md-5 col-lg-5">
        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
        <h3>{{ article.name }}</h3>
            <p class="Description">{{ article.description }}</p>
        </div>
        <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
            <h4 class="col-xs-3 col-sm-3 col-md-3 col-lg-3">Prix : {{ article.price }}</h4> 
            <h4 class="col-xs-3 col-sm-3 col-md-3 col-lg-3">Quantité : {{ article.quantity }}</h4>
        </div>
         <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
            <a href="{{ path('website_boutique')}}"><p class="AddPannier col-xs-5 col-sm-5 col-md-5 col-lg-5">Retour à la liste</p></a>
            <p class="AddPannier col-xs-offset-1 col-sm-offset-1 col-md-offset-1 col-lg-offset-1 col-xs-5 col-sm-5 col-md-5 col-lg-5">Ajouter au panier</p>
        </div>
    </section>

{% endblock %}